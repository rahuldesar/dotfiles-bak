alias shlist='shopify theme list --all'     # List all available themes
alias shl='shopify theme storelogs'      # View theme deployment logs
alias shlog='shopify theme storelogs'      # View theme deployment logs
alias shopen='shopify theme open'                 # Open the Shopify admin
alias shtd='shopify theme dev'                 # Open the Shopify development server
alias shinfo='shopify theme info'                 # Open Shopify theme information
alias shpull='shopify theme pull -d'                 # Pull development server
alias shlogout='shopify auth logout'                 # Logout from shopify  

